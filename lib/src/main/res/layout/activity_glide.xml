<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NET.Glide.GlideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center"
            android:text="Glide 文档 \n http://bumptech.github.io/glide/"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center"
            android:text="Glide框架源码解析 \n http://blog.csdn.net/column/details/15318.html"/>


        <Button
            android:id="@+id/btn_glide_base_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="基本用法"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="在Application 模块中的使用"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="GlideExtension-GlideOption-GlideType"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="占位符[placeholder|error|fallback]"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="选项[ RequestOptions|TransitionOptions|RequestBuilder]"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_transformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="变换[ CenterCrop|FitCenter|CircleCrop]"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_glide_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="目标[ Target ]"
            android:textAllCaps="false"/>


    </LinearLayout>


</ScrollView>
