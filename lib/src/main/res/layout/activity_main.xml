<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dream.william.lib.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_glide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Glide"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_gson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Gson"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_ok_http"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_retrofit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Retrofit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rx_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxAndroid"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rx_binding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxBinding"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_rx_java"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxJava"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_object_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Database for ObjectBox"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="btn_"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
