<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dream.william">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.notification.NotificationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.layout.ConstraintLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".photophase.PhaseActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".photophase.PhaseEditActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".photophase.PhaseShowActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".database.realm.RealmActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.widget.ToolBarActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.widget.SearchViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.widget.WebViewActivity">
        </activity>
        <activity android:name=".view.widget.TextViewActivity">
        </activity>
        <activity android:name=".net.NetTestActivity">
        </activity>

        <!-- Activity的生命周期 -->
        <activity android:name=".component.activity.ActivityOne"/>
        <activity android:name=".component.activity.ActivityTwo"/>
        <activity android:name=".component.activity.ActivityZero"/>
        <activity
            android:name=".component.activity.ActivityConfig"
            android:configChanges="orientation|screenSize"/>

        <!-- Activity的启动模式 -->
        <activity
            android:name=".component.activity.ActivityModeStandard"
            android:launchMode="standard"/>
        <activity
            android:name=".component.activity.ActivityModeSingleTop"
            android:launchMode="singleTop"/>
        <activity
            android:name=".component.activity.ActivityModeSingleTask"
            android:launchMode="singleTask"/>
        <activity
            android:name=".component.activity.ActivityModeSingleInstance"
            android:launchMode="singleInstance"/>
        <!--TaskAffinity 任务相关性-->
        <activity
            android:name=".component.activity.ActivityModeTaskAffinity"
            android:launchMode="singleTask"
            android:taskAffinity="study.william.dream"/>
        <activity
            android:name=".component.activity.ActivityModeTaskAffinity2"
            android:launchMode="singleTask"
            android:taskAffinity="study.william.dream"/>
    </application>

</manifest>