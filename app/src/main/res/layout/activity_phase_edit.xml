<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dream.william.photophase.PhaseEditActivity">

    <com.dream.william.photophase.widgets.DispositionView
        android:id="@+id/dv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dream.william.photophase.widgets.ResizeFrame
            android:id="@+id/resize_frame"
            android:layout_width="1dp"
            android:layout_height="1dp">
        </com.dream.william.photophase.widgets.ResizeFrame>

    </FrameLayout>

</FrameLayout>
