<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dream.william.MainActivity">


    <include
        android:id="@+id/tb_bar"
        layout="@layout/include_tool_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Activity"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Service"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_broadcast_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Broadcast Receive"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_content_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Content Provider"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Notification"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_photo_phase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="陈列格子铺"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_phase_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="编辑格子铺"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_phase_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="展示格子铺"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ToolBar"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="SearchView"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_net_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Net Request"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
