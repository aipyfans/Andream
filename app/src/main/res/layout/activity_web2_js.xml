<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dream.william.view.widget.WebView.Web2JsActivity">

    <include
        android:id="@+id/tb_bar"
        layout="@layout/include_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="WebView使用详解 \n http://www.jianshu.com/p/3c94ae673e2a"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="Android WebView与 JS 的交互方式 \n http://www.jianshu.com/p/345f4d8a5cfa"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="Android WebView 使用漏洞 \n http://www.jianshu.com/p/3a345d27cd42"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:text="Android构建WebView的缓存机制和资源预加载方案 \n http://www.jianshu.com/p/5e7075f4875f"/>

    <Button
        android:id="@+id/btn_load_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="CallJs by WebView.loadUrl()"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_evaluate_js"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="CallJs by WebView.evaluateJavascript()"
        android:textAllCaps="false"/>

    <WebView
        android:id="@+id/wv_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
